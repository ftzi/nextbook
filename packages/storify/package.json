{
	"name": "@ftzi/storify",
	"version": "1.0.0",
	"description": "Zero-config component stories for React frameworks",
	"type": "module",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/ftzi/storify"
	},
	"keywords": [
		"storify",
		"storybook",
		"components",
		"stories",
		"react",
		"nextjs",
		"tanstack"
	],
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./next": {
			"types": "./dist/adapters/next.d.ts",
			"import": "./dist/adapters/next.js"
		},
		"./tanstack": {
			"types": "./dist/adapters/tanstack.d.ts",
			"import": "./dist/adapters/tanstack.js"
		}
	},
	"bin": {
		"storify": "./dist/cli/index.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "bun scripts/dev.ts --watch",
		"build": "bun scripts/dev.ts",
		"ts": "tsc --noEmit",
		"test": "bun test"
	},
	"peerDependencies": {
		"@tanstack/react-router": ">=1",
		"msw": ">=2",
		"next": ">=16",
		"react": ">=19",
		"react-dom": ">=19",
		"zod": ">=3"
	},
	"peerDependenciesMeta": {
		"@tanstack/react-router": {
			"optional": true
		},
		"msw": {
			"optional": true
		},
		"next": {
			"optional": true
		}
	},
	"devDependencies": {
		"@svgr/cli": "^8.1.0",
		"@tanstack/react-router": "^1.121.2",
		"@types/react": "catalog:",
		"@types/react-dom": "catalog:",
		"@workspace/typescript-config": "workspace:*",
		"msw": "^2.12.4",
		"next": "catalog:",
		"react": "catalog:",
		"react-dom": "catalog:",
		"typescript": "catalog:",
		"zod": "catalog:"
	}
}
