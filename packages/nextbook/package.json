{
	"name": "nextbook",
	"version": "0.1.0",
	"description": "Zero-config component stories for Next.js",
	"type": "module",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/ftzi/nextbook"
	},
	"keywords": [
		"nextjs",
		"storybook",
		"components",
		"stories",
		"react"
	],
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"bin": {
		"nextbook": "./dist/cli/index.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "bun run svg",
		"build": "bun run svg && rm -rf dist && tsc -p tsconfig.build.json && cp src/components/*.css dist/components/ && cp -r src/styles dist/",
		"svg": "svgr --out-dir src/components/icons --config-file svgr.config.js ../../assets",
		"ts": "tsc --noEmit",
		"test": "bun test"
	},
	"dependencies": {
		"citty": "0.1.6"
	},
	"peerDependencies": {
		"next": ">=15",
		"react": ">=18",
		"react-dom": ">=18",
		"zod": ">=3"
	},
	"devDependencies": {
		"@svgr/cli": "^8.1.0",
		"@types/react": "catalog:",
		"@types/react-dom": "catalog:",
		"@workspace/typescript-config": "workspace:*",
		"next": "catalog:",
		"react": "catalog:",
		"react-dom": "catalog:",
		"typescript": "catalog:",
		"zod": "catalog:"
	}
}
