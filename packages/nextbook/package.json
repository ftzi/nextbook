{
	"name": "nextbook",
	"version": "0.0.1",
	"description": "Zero-config component stories for Next.js",
	"type": "module",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/ftzi/nextbook"
	},
	"keywords": [
		"nextjs",
		"storybook",
		"components",
		"stories",
		"react"
	],
	"bin": {
		"nextbook": "./src/cli/index.ts"
	},
	"scripts": {
		"svg": "svgr --out-dir src/components/icons --config-file svgr.config.js assets",
		"ts": "tsc --noEmit",
		"test": "bun test"
	},
	"dependencies": {
		"citty": "0.1.6"
	},
	"peerDependencies": {
		"next": ">=15",
		"react": ">=18",
		"react-dom": ">=18",
		"zod": ">=3"
	},
	"devDependencies": {
		"@svgr/cli": "^8.1.0",
		"@types/react": "catalog:",
		"@types/react-dom": "catalog:",
		"@workspace/typescript-config": "workspace:*",
		"next": "catalog:",
		"react": "catalog:",
		"react-dom": "catalog:",
		"typescript": "catalog:",
		"zod": "catalog:"
	},
	"exports": {
		".": "./src/index.ts",
		"./story": "./src/story.ts",
		"./components/*": "./src/components/*.tsx",
		"./utils/*": "./src/utils/*.ts",
		"./page": "./src/page.tsx",
		"./params": "./src/params.ts"
	}
}
