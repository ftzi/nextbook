{
	"name": "nextbook-monorepo",
	"packageManager": "bun@1.3.3",
	"private": true,
	"scripts": {
		"dev": "bun i && turbo dev",
		"build": "bun i && turbo build",
		"lint": "bunx biome check --write --unsafe . --error-on-warnings",
		"ts": "turbo ts",
		"ok": "turbo ts && bun lint",
		"test": "turbo test",
		"e2e": "bun run --cwd apps/example e2e"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.7",
		"@types/bun": "1.3.3",
		"@types/node": "24.10.1",
		"@workspace/typescript-config": "workspace:*",
		"turbo": "2.6.1",
		"typescript": "5.9.3"
	},
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"react": "19.2.0",
			"react-dom": "19.2.0",
			"@types/react": "19.2.2",
			"@types/react-dom": "19.2.2",
			"typescript": "5.9.3",
			"zod": "4.1.12",
			"next": "16.0.1"
		}
	},
	"engines": {
		"node": ">=20"
	}
}
