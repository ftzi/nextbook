{
  "name": "nextbook-monorepo",
  "packageManager": "bun@1.3.3",
  "private": true,
  "scripts": {
    "dev": "bun i && turbo dev",
    "build": "bun i && turbo build",
    "lint": "bunx biome check --write --unsafe . --error-on-warnings",
    "ts": "turbo --output-logs=errors-onlyts",
    "ok": "bun ts && bun lint && bun test",
    "e2e": "bun run --cwd apps/web e2e",
    "e2e:ui": "bun e2e --ui"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/bun": "1.3.3",
    "@types/node": "24.10.1",
    "@workspace/typescript-config": "workspace:*",
    "turbo": "2.6.3",
    "tw-animate-css": "^1.4.0",
    "typescript": "5.9.3",
    "web": "workspace:*"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "react": "19.2.1",
      "react-dom": "19.2.1",
      "@types/react": "19.2.7",
      "@types/react-dom": "19.2.3",
      "typescript": "5.9.3",
      "zod": "4.1.13",
      "next": "16.0.7"
    }
  },
  "engines": {
    "node": ">=20"
  }
}
